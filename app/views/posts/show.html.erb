<% title "Post" %>

<p>
  <strong>Name:</strong>
  <%=h @post.name %>
</p>
<p>
  <strong>Content:</strong>
  <%=h @post.content %>
</p>
<p>
  <strong>User:</strong>
  <%=h @post.user_id %>
</p>
<p>
  <strong>Post:</strong>
  <%=h @post.post_id %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
