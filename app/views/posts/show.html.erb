<% title ( @post.name.capitalize) %>
	<div align='right'>
	  by <strong><%= @post.user %></strong>
	</div>
<p>
  <i><%=h @post.content %></i>
</p>

<hr/>
<div class='post_footer' >
	<small>
	<p>
	  <strong>Post Id:</strong>
	  <%#=h @post.post_id %> 
	  <%=@post.post ? link_to( @post.post , @post.post) : 'niuno' %>
	  <strong>Publish date:</strong>
	  <%=h @post.publish_start || '?!?' %> ..
	    <%=h @post.publish_end   || '?!?' %> 
	</p>
</div>
<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
