<% title ( @post.name) %>
	<div align='right'>
	  by <strong><%= @post.user %></strong>
	</div>
<p>
  <strong>Content:</strong>
  <%=h @post.content %>
</p>

<p>
  <strong>Post:</strong>
  <%=h @post.post_id %>
</p>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", posts_path %>
</p>
