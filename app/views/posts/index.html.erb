<% title "Posts" %>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Post</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.name %></td>
      <td><%=link_to( post.user,post.user) rescue '-' %></td>
      <td><%= father_post_link(post) %></td>
      <td><%= link_to "Show", post %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
      <td><%= link_to "Destroy", post, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
