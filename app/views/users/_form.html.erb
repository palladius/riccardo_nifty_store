<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :goliardic_name %><br />
    <%= f.text_field :goliardic_name %>
  </p>
  <p>
    <%= f.label :about_you %><br />
    <%= f.text_area :about_you %>
  </p>

  <p><%= f.submit %></p>
<% end %>
